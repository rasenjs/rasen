{
  "name": "rasen-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Rasen - A reactive rendering framework monorepo",
  "packageManager": "yarn@4.12.0",
  "workspaces": [
    "packages/*",
    "examples/*",
    "templates/*",
    "www"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -Apt run build",
    "dev": "yarn workspaces foreach -Aipt run dev",
    "test": "yarn workspaces foreach -Apt run test",
    "lint": "yarn workspaces foreach -Apt run lint",
    "typecheck": "yarn workspaces foreach -Apt run typecheck",
    "clean": "yarn workspaces foreach -Apt run clean && rm -rf node_modules",
    "sync-snippets": "node scripts/sync-snippets.mjs",
    "perf:analyze": "tsx scripts/analyze-trace.ts",
    "perf:compare": "tsx scripts/compare-traces.ts",
    "perf:find": "tsx scripts/find-latest-trace.ts",
    "perf:capture": "tsx scripts/capture-profile.ts",
    "perf:webgl": "tsx examples/webgl/capture-profile.ts",
    "examples:web:dev": "yarn workspace @rasenjs/examples-web dev",
    "examples:web:build": "yarn workspace @rasenjs/examples-web build",
    "examples:web:preview": "yarn workspace @rasenjs/examples-web preview",
    "examples:canvas:dev": "yarn workspace @rasenjs/examples-canvas-2d dev",
    "examples:canvas:build": "yarn workspace @rasenjs/examples-canvas-2d build",
    "examples:canvas:preview": "yarn workspace @rasenjs/examples-canvas-2d preview",
    "examples:webgl:dev": "yarn workspace @rasenjs/examples-webgl dev",
    "examples:webgl:build": "yarn workspace @rasenjs/examples-webgl build",
    "examples:webgl:preview": "yarn workspace @rasenjs/examples-webgl preview",
    "www:dev": "yarn workspace @rasenjs/www dev",
    "www:build": "yarn workspace @rasenjs/www build",
    "www:preview": "yarn workspace @rasenjs/www preview"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "node-fetch": "2",
    "prettier": "^3.1.0",
    "puppeteer": "^24.33.0",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rasenjs/rasen.git"
  },
  "homepage": "https://github.com/rasenjs/rasen",
  "bugs": {
    "url": "https://github.com/rasenjs/rasen/issues"
  },
  "author": "Rasen Contributors",
  "license": "MIT"
}
