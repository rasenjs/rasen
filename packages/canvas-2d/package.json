{
  "name": "@rasenjs/canvas-2d",
  "version": "0.1.0-alpha",
  "description": "Rasen Canvas 2D renderer",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "../../node_modules/.bin/tsup --watch",
    "build": "yarn clean && ../../node_modules/.bin/tsup",
    "test": "../../node_modules/.bin/vitest --run",
    "test:visual": "../../node_modules/.bin/vitest run --dir src/__tests__/visual",
    "test:visual:update": "../../node_modules/.bin/cross-env UPDATE_SNAPSHOTS=true ../../node_modules/.bin/vitest run --dir src/__tests__/visual",
    "typecheck": "../../node_modules/.bin/tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "canvas",
    "2d",
    "renderer"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rasenjs/rasen.git",
    "directory": "packages/canvas-2d"
  },
  "homepage": "https://github.com/rasenjs/rasen/tree/main/packages/canvas-2d",
  "bugs": {
    "url": "https://github.com/rasenjs/rasen/issues"
  },
  "author": "Rasen Contributors",
  "license": "MIT",
  "dependencies": {
    "@rasenjs/core": "workspace:*"
  },
  "devDependencies": {
    "@napi-rs/canvas": "^0.1.83",
    "@types/pngjs": "^6.0.5",
    "cross-env": "^7.0.3",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0"
  }
}
